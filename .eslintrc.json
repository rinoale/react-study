{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "settings": {
        "ecmascript": 6,
        "jsx": true
    },
    "plugins": [
        "react",
        "import"
    ],
    "rules": {
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "no-console": ["error", { "allow": ["warn", "error"] }],
        "react/no-danger": 0,
        "react/prefer-stateless-function": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"]  }]
    },
    "extends": [
    "airbnb"
    ]
}
